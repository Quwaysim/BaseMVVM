<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyMaterialTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#E05206</item>
        <item name="android:colorPrimary">#E05206</item>
        <item name="colorPrimaryDark">#b34104</item>
        <item name="android:colorPrimaryDark">#b34104</item>
        <item name="android:colorAccent">#69737b</item>
        <item name="selectableItemBackground">?android:attr/selectableItemBackground</item>
        <item name="android:colorControlHighlight">#8de05206</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="MyMaterialThemeSwitch" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">#E05206</item>
        <item name="android:colorPrimaryDark">#b34104</item>
        <item name="android:colorAccent">#69737b</item>
        <item name="android:colorControlActivated">#E05206</item>
    </style>

    <style name="MyCardHeadingText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:attr/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
